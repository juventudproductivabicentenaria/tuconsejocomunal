            <field name="inherit_id" ref="survey.survey_email_compose_message"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ids']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
            </field>
        </record>
        
