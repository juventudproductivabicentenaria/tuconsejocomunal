<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_communal_council_admin_form" model="ir.ui.view">
        <field name="name">Wizard Communal Council Admin</field>
        <field name="model">tcc.wizard.communal.council.admin</field>
        <field name="arch" type="xml">
            <form string="Wizard Communal Council Admin">
                    <sheet>
                        <group>
                            <field name="title"></field>
                            <field name="description"></field>
                            <field name="date_init"></field>
                        </group>
                        
                    </sheet>
            </form>
           <footer>
                  <button name='action_report' string='Generar'
                            class='oe_highlight'
                            type='object'
                             />
                  <span class="or_cancel" > or
                            <button special="cancel" string="Cancel" type="object" class="oe_link oe_inline"/>
                 </span>
           </footer>
        </field>
    </record>

    <record id="action_wizard_communal_council_admin" model="ir.actions.act_window">
        <field name="name">Communal Council Admin Wizard Report</field>
        <field name="res_model">tcc.wizard.communal.council.admin</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_communal_council_admin_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_wizard_communal_council_admin"
            name="Report Communal Council Admin"
            action="action_wizard_communal_council_admin"
            parent="tcc_communal_coincil_menu"/>


</odoo>
